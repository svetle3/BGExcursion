@model IEnumerable<BGExcursion.DAL.Tbl_Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Екскурзии
        <a href="../Admin/ProductAdd" class="btn btn-info pull-right fa fa-plus">Добави нова екскурзия</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Наименование на екскурзия</th>
                        <th>Действие</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>

                            @Html.ActionLink("Редакция", "ProductEdit", new { productId = item.ProductId })
                        </td>
                        
                    </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>